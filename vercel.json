{
    "version": 2,
    "buildCommand": "cd frontend && npm install && npm run build",
    "outputDirectory": "frontend/dist",
    "installCommand": "echo 'Skipping root install'",
    "framework": null,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "https://tradeverse-backend.onrender.com/api/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}